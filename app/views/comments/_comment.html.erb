  <% post.comments.each do |comment| %>
    <p><%= attachment_image_tag comment.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment_content %>
    <% if comment.user == current_user %>
      <div>
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
      </div>
    <% end %>
  <% end %>