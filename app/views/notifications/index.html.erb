<h4 class="text-center">〜 <i class="fas fa-heart text-danger"></i>︎とフォローの通知 〜</h4>
  <div class="text-center">
    <% if @notifications.exists? %>
      <div class="p-4">
        <%= render @notifications %>
      </div>
    <% else %>
      <p>通知はありません</p>
    <% end %>
    <%= link_to user_notifications_path, method: :delete do %>
      <i class="fas fa-trash" style="color: black;"></i>
      <h7 style="color: black;">全削除</h7>
    <% end %>
  </div>