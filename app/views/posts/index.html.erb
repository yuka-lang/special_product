<div class="main-visual">
    <h1 class="text-center p-4">特産物シェアサイト</h1>
    <p>...</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-9 mx-auto text-center">
      <h4 class="pt-5">投稿一覧</h4>
      <% @posts.each do |post| %>
        <div class="col">
          <div class="card" style="width: 18rem;">
            <p class="card-img-top">
              <%= link_to post_path(post.id) do %>
                <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg', fallback: "no_image.jpg" %>
            </p>
            <p class="card-title"><%= post.title %></p>
              <% end %>
            <span class="ml-5">❤️️<%= post.favorites.count %></span>
            <!--投稿一覧画面で投稿に紐づくタグを表示-->
            <i class="fas fa-tag"><%= post.tags.map(&:name).join(', ') %></i>
            <% if user_signed_in? %>
              <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
      <div class="col-3">
      <h4>サイドバー</h4>
    </div>

    <!--タグリスト-->
    <% @tag_list.each do |list|%>
      <%=link_to list.name,search_tag_path(tag_id: list.id) %>
      <%="(#{list.posts.count})" %>
    <% end %>
  </div>
</div>

