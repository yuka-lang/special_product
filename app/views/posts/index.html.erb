<div class="main-visual">
    <h1 class="text-center p-4">特産物シェアサイト</h1>
    <p>...</p>
</div>

<div class="container">
  <div class="row">
      <% @posts.each do |post| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <p class="card-img-top">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %>
          </p>
          <p class="card-title">タイトル：<%= post.title %></p>
          <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
        </div>
        </div>
      <% end %>
  </div>
</div>

