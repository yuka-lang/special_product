<div class="main-visual">
    <h3 class="text-center p-4">テキスト</h3>
    <p>...</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto text-center">
      <h4 class="pt-5">投稿一覧</h4>
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <div class="col-md-3">
              <div class="card pt-3 px-3" style="width: 18rem;">
                <p class="card-img-top">
                  <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg', fallback: "no_image.jpg" %>
                </p>
                <p class="card-title"><%= post.title %></p>
                  <% end %>
                <!--いいねカウント数-->
                <span class="ml-5">❤️️<%= post.favorites.count %></span>
                <!--投稿一覧画面で投稿に紐づくタグを表示-->
                <i class="fas fa-tag"><%= post.tags.map(&:name).join(', ') %></i>
                <% if user_signed_in? %>
                  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
                <% end %>
              </div>
            </div>
          <% end %>
            <div class="d-flex justify-content-center"><%= paginate @posts %></div>
        <% else %>
          <h3>該当キーワードがありません</h3>
        <% end %>
      </div>
      <div class="col-3">
        <h4>サイドバー</h4>
          <!--タグ一覧表示-->
          <%= render "posts/sidebar", tag_lists: @tag_lists %>
      </div>
    </div>
  </div>

