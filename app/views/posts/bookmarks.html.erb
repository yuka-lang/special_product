<div class= "container">
  <div class= "row px-4">
    <div class = "col-md-3">
      <div class="border border-dark text-center pb-4">
        <%= render "users/user", user: @user %>
      </div>
    </div>

      <div class="col-md-9">
        <h4 class="border-bottom"><span class="p-4">ブックマーク一覧</span></h4>
         <div class="row text-center pt-4">
           <!--投稿一覧を表示-->
            <% @bookmarks.each do |bookmark| %>
              <div class="col-md-6">
                <%= link_to post_path(bookmark.post.id) do %>
                    <%= attachment_image_tag bookmark.post, :image, :fill, 250, 150, format: 'jpeg', fallback: "no_image.jpg" %>
                   <% end %>
                     <%= link_to post_path(bookmark.post) do %>
                      <p class="px-5 text-body"><%= bookmark.post.title %></p>
                     <% end %>
              </div>
            <% end %>
         </div>
      </div>
  </div>
</div>