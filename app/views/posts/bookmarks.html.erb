<div class= "container">
  <div class= "row">
    <div class = "col-md-3">
        <%= render "users/user", user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h3>ブックマーク一覧</h3>
        <% @bookmarks.each do |bookmark| %>
        <%= link_to post_path(bookmark.post.id) do %>
          <%= attachment_image_tag bookmark.post, :image, :fill, 200, 150, format: 'jpeg', fallback: "no_image.jpg" %>
        <% end %>
        </p>
        <p><%= link_to post_path(bookmark.post) do %>
              <%= bookmark.post.title %>
            <% end %></p>
        <% end %>
      </div>
  </div>
</div>