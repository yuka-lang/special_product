<div class= "container">
  <div class= "row">
    <div class = "col-md-3 border border-dark text-center">
      <%= render "users/user", user: @user %>
    </div>
      <div class="col-md-9">
        <h4 class="border-bottom"><span class="p-4">ブックマーク一覧</span></h4>
         <div class="row text-center pt-4">
          <% @bookmarks.each do |bookmark| %>
            <!--投稿一覧を表示-->
              <div class="col-md-6">
                <p><%= link_to post_path(bookmark.post.id) do %>
                    <%= attachment_image_tag bookmark.post, :image, :fill, 200, 150, format: 'jpeg', fallback: "no_image.jpg" %>
                   <% end %></p>
                <p class="px-5"><%= link_to post_path(bookmark.post) do %>
                      <%= bookmark.post.title %>
                   <% end %></p>
              </div>
            <% end %>
         </div>
      </div>
  </div>
</div>