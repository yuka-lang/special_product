  <!--タグ一覧-->
  <div class="text-body border border-secondary py-3">
    <h5><i class="fas fa-tag text-success"></i>人気のタグはこちら</h5>
    <% tag_lists.each do |list| %>
      <!--タグが0の時は表示しない-->
      <% if list.posts.count != 0 %>
        <button class=" border border-secondary ml-2 mt-1 text-dark" disabled>
          <%=link_to list.name,search_tag_path(tag_id: list.id) %>
          <%="(#{list.posts.count})" %></botton>
      <% end %>
    <% end %>
  </div>

    <div>
      <h5 class="font-weight-bold pt-3">今月のおすすめ投稿</h5>
        <!--コメントの多い順位(1位から順に)一覧を表示する-->
        <% month_post_comment_ranks.each.with_index(1) do |post, i| %>
         第<%= i %>位
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 220, 150, format: 'jpeg', fallback: "no_image.jpg" %>
      <p class="card-title text-body"><%= post.title %></p>
        <% end %>
      <!--いいねカウント数-->
      <span class="ml-5"><i class="fas fa-heart text-danger"></i>️️<%= post.favorites.count %></span>
      <!--投稿一覧画面で投稿に紐づくタグを表示-->
      <i class="fas fa-tag text-success"></i>
        <% post.tags.each do |tag| %>
          <%= link_to tag.name,search_tag_path(tag_id: tag.id)%>
          <%="(#{tag.posts.count})" %>
        <% end %>

        <% if user_signed_in? %>
          <p><%= link_to post.comments.count, post_path(post.id) %>コメント</p>
        <% end %>
      <% end %>
    </div>

    <div>
      <h4 class="font-weight-bold"><i class="fas fa-crown text-warning"></i> 今週の人気投稿</br>ランキング</h4>
        <!--ランキングと順位(1位から順に)一覧を表示する-->
        <% week_post_favorite_ranks.each.with_index(1) do |post, i| %>
         <p>第<%= i %>位</p>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 220, 150, format: 'jpeg', fallback: "no_image.jpg" %>
      <p class="card-title text-body"><%= post.title %></p>
        <% end %>
      <!--いいねカウント数-->
      <span class="ml-5"><i class="fas fa-heart text-danger"></i>️️<%= post.favorites.count %></span>
      <!--投稿一覧画面で投稿に紐づくタグを表示-->
      <i class="fas fa-tag text-success"></i>
        <% post.tags.each do |tag| %>
          <%= link_to tag.name,search_tag_path(tag_id: tag.id)%>
          <%="(#{tag.posts.count})" %>
        <% end %>

        <% if user_signed_in? %>
          <p><%= link_to post.comments.count, post_path(post.id) %>コメント</p>
        <% end %>
      <% end %>
    </div>