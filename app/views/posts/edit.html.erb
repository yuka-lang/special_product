<h1>編集画面</h1>


<%= form_with model:@post, local:true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

<h4>投稿画像</h4>
<%= f.attachment_field :image %>

<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>都道府県</h4>
<%= f.text_field :prefectures %>

<h4>おすすめ季節</h4>
<%= f.text_field :season %>

<h4>紹介文</h4>
<%= f.text_area :introduction %>

<h4>ひと言文！</h4>
<%= f.text_field :word %>

<%= f.submit '保存' %>

<% end %>

