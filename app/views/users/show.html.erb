<div class= "container">
  <div class= "row">
    <div class = "col-md-3">
      <%= render "users/user", user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--投稿一覧を表示-->
      <h1><%= @user.name %>さんの投稿一覧</h1>
      <% @posts.each do |post| %>
        <div>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :image, :fill, 200, 200, format: "jpeg", fallback: "no_image.jpg" %>
            <p><%= post.title %></p>
          <% end %>
        </div>
      <% end %>
    </div>
 </div>
</div>

<%= paginate @posts %>