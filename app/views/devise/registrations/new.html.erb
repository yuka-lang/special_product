<div class="container">
  <div class="card card-container">
    <img id="profile-img" class="profile-img img-circle" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    
    <!--新規登録フォーム-->
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class="mt-2">
        <%= f.label :"名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :"パスワード(6文字以上)" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions my-3 d-flex justify-content-center">
        <%= f.submit "新規登録", class: "btn btn-warning" %>
      </div>
    <% end %>

      <p><span>----</span> 登録済みのお客様ですか？ <span>----</span></p>
      <div class= "d-flex justify-content-center">
     <%= link_to "ログイン", new_user_session_path %>を行ってください

  </div>
</div>
