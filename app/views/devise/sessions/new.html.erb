<div class="container">
  <div class="card card-container">
    <img id="profile-img" class="profile-img img-circle" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />

    <!--ログイン入力フォーム-->
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class= "mt-2">
        <%= f.label :email , "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class= "mt-2">
        <%= f.label :password , "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions my-3 d-flex justify-content-center">
        <%= f.submit "ログイン", class: "btn btn-warning" %>
      </div>
    <% end %>

      <p><span>------</span> 新しいお客様ですか？ <span>------</span></p>
      <div class= "d-flex justify-content-center">
     <%= link_to "新規登録", new_user_registration_path %>を行ってください

  </div>
</div>